{
    "name": "chrome-gemini",
    "version": "1.7.3",
    "description": "Chrome extension for chatting with Gemini & OpenAI APIs",
    "type": "module",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "build": "rm -rf dist && mkdir -p dist && zip -r dist/chrome-gemini.zip manifest.json sidepanel.html sidepanel.css sidepanel.js background.js lib src icons -x '*.DS_Store'",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@playwright/test": "^1.40.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0"
    },
    "dependencies": {
        "highlight.js": "^11.11.1",
        "marked": "^17.0.1"
    }
}